<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_list_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/book_city"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@drawable/reserver_itembg_top"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip" >

        <ImageView
            android:id="@+id/book_city_left_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/reservation_icon_location" />

        <TextView
            android:id="@+id/book_city_text"
            style="@style/setting_common_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/book_city_left_coin"
            android:hint="@string/book_choose_city"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip"
            android:text="9月1日  鄂A00523 已成交，"
            android:textColorHint="@color/about_us_copyright" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/setting_common_line" />

    <RelativeLayout
        android:id="@+id/book_from"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@drawable/reserver_itembg_center"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip" >

        <ImageView
            android:id="@+id/book_from_left_coin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_outset" />

        <TextView
            android:id="@+id/book_from_text"
            style="@style/setting_common_textview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/book_from_left_coin"
            android:ellipsize="end"
            android:paddingLeft="12.0dip"
            android:paddingRight="12.0dip"
            android:singleLine="true"
            android:text="上海-北京 50t 总价50000"
            android:textColorHint="@color/about_us_copyright" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/white"
        android:paddingLeft="12.0dip" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/setting_common_line" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/book_to"
        android:layout_width="fill_parent"
        android:layout_height="44.0dip"
        android:background="@drawable/reserver_itembg_bottom"
        android:gravity="center_vertical"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip" >
         <Button
            android:id="@+id/four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="1dp"
            android:background="@drawable/buttonstyle"
            android:focusable="false"
            android:paddingBottom="1dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="1dp"
            android:text="拨打电话"
            android:textColor="@color/white"
            android:textSize="18sp" 
            android:visibility="gone"/>
        <Button
            android:id="@+id/three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:background="@drawable/buttonstyle"
            android:focusable="false"
            android:paddingBottom="1dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="1dp"
            android:text="完成交易"
            android:textColor="@color/white"
            android:textSize="18sp" 
            android:visibility="gone"/>

        <Button
            android:id="@+id/two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:background="@drawable/buttonstyle"
            android:focusable="false"
            android:paddingBottom="1dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="1dp"
            android:text="再次发布"
            android:textColor="@color/white"
            android:textSize="18sp" 
            android:visibility="gone"/>

        <Button
            android:id="@+id/one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="1dp"
            android:background="@drawable/buttonstyle"
            android:focusable="false"
            android:paddingBottom="1dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="1dp"
            android:text="取消发布"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="20.0px" />

</LinearLayout>