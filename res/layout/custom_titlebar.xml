<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_title_bar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/titlebar_height"
    android:background="@drawable/bg_top"
    android:gravity="center_vertical" >

    <ImageView
        android:id="@+id/titlebarLeftButton"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingLeft="8.0dip"
        android:paddingRight="16.0dip"
        android:scaleType="center"
        android:src="@drawable/back_button_bg" />

    <TextView
        android:id="@+id/titlebarTV"
        style="@style/titlebar_tv_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" 
        android:textColor="@android:color/white"/>
    
    <Button
        android:id="@+id/titlebarRightButton"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@null"
        android:paddingLeft="8.0dip"
        android:paddingRight="16.0dip"
        android:scaleType="center"
		android:text="刷新"
        android:src="@drawable/back_button_selector" 
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/titlebarRightContainerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingRight="8.0dip" />

</RelativeLayout>